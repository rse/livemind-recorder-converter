{
    "name":                              "Livemind-Recorder-Converter",
    "homepage":                          "https://github.com/rse/livemind-recorder-converter",
    "version":                           "0.9.0",
    "description":                       "Converter Output Files of Livemind Recorder",
    "keywords":                          [ "livemind", "recorder", "convert", "output" ],
    "license":                           "GPL-3.0-only",
    "private":                           true,
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                      "12.0.5",
        "electron-builder":              "22.10.5",
        "shelljs":                       "0.8.4",
        "glob":                          "7.1.6",
        "eslint":                        "7.24.0",
        "eslint-config-standard":        "16.0.2",
        "eslint-plugin-promise":         "4.3.1",
        "eslint-plugin-import":          "2.22.1",
        "eslint-plugin-node":            "11.1.0",
        "eslint-plugin-vue":             "7.9.0",
        "cross-env":                     "7.0.3",
        "cross-zip":                     "4.0.0",
        "npm-install-fetch":             "1.3.2",
        "npm-run-all":                   "4.1.5",
        "modclean":                      "3.0.0-beta.1"
    },
    "dependencies": {
        "electron-log":                  "4.3.4",
        "electron-store":                "8.0.0",
        "execa":                         "5.0.0",
        "@fortawesome/fontawesome-free": "5.15.3",
        "typopro-web":                   "4.2.5"
    },
    "main":                              "./app-main.js",
    "build": {
        "appId":                         "com.engelschall.apps.lrc",
        "asar":                          true,
        "asarUnpack":                    [ "app-ffmpeg.d/ffmpeg*" ],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "mac": {
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "app-res-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/nodemon/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/babel-eslint/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-install-fetch/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/modclean/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable", "arch": [ "x64" ] } ],
            "icon":                      "app-res-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/nodemon/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/babel-eslint/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-install-fetch/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/modclean/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage", "arch": [ "x64" ] } ],
            "executableName":            "Livemind-Recorder-Converter",
            "icon":                      "app-res-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/nodemon/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/babel-eslint/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-install-fetch/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/modclean/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "Livemind-Recorder-Converter.exe"
        }
    },
    "scripts": {
        "install":                       "npm-run-all -s install:fetch-prolog install:fetch install:fetch-epilog install:squeeze",
        "install:fetch-prolog":          "node npm-install.js prolog",
        "install:fetch":                 "npm-install-fetch --config npm-install.yaml",
        "install:fetch-epilog":          "node npm-install.js epilog",
        "install:squeeze":               "modclean -p . -r -P -n default:safe",
        "setup":                         "npm install --only-production --global-style",
        "lint":                          "eslint --config eslint.yaml --ext js *.js",
        "start":                         "electron app-main.js",
        "start-dev":                     "cross-env DEBUG=1 npm start",
        "package":                       "node npm-package.js"
    }
}
